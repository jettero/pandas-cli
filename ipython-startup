#!/usr/bin/env python
# coding: utf-8

import pandas as pd

import pdc.util
import pdc.parser
import pdc.op

f1 = pdc.util.read_csv('t/asset/test1.csv')
f2 = pdc.util.read_csv('t/asset/test2.csv')
f3 = pdc.util.read_csv('t/asset/test3.csv')

to_parse = "f1 + f2; t1 + f3"
pf = pdc.parser.parse(to_parse, files=(f1,f2,f3))

/print f'parsed "{to_parse}" as\n' pf

df = pf()

/print 'resulting df=\n' df
